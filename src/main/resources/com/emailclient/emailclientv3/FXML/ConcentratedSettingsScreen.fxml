<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emailclient.emailclientv3.Controller.ConcentratedSettingsScreenController">
   <children>
      <VBox alignment="CENTER" layoutY="25.0" prefHeight="200.0" prefWidth="500.0">
         <children>
            <Label prefHeight="40.0" prefWidth="480.0" text="In Concentrated Mode you will only receive a notification when there are a specified number of new emails in your Inbox." textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Number of New Emails: " />
                  <Spinner fx:id="spinner" editable="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" prefHeight="20.0" prefWidth="80.0" text="Cancel" />
                  <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmChoice" prefHeight="20.0" prefWidth="80.0" text="Confirm" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
